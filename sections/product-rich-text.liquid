          <h1 class="h1">{{ section.settings.section_title | escape }}</h1>
        </div>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rich-text__text--{{ section.settings.text_size }} rte-setting text-left">{{ section.settings.text }}</div>
      {% endif %}
    </div>
  </div>
</div>



